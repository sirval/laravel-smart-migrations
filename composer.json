{
    "name": "sirval/laravel-smart-migrations",
    "description": "Intelligently manage Laravel migrations with safe rollback by table or model, foreign key detection, preview mode, and comprehensive migration analysis tools",
    "keywords": [
        "laravel",
        "migrations",
        "rollback",
        "migration-management",
        "database",
        "foreign-keys",
        "table-rollback",
        "model-rollback",
        "batch-rollback",
        "preview-mode",
        "migration-tools"
    ],
    "homepage": "https://github.com/sirval/laravel-smart-migrations",
    "license": "MIT",
    "authors": [
        {
            "name": "Ohuka Ikenna",
            "email": "ohukaiv@gmail.com",
            "role": "Developer",
            "homepage": "https://github.com/sirval"
        }
    ],
    "support": {
        "issues": "https://github.com/sirval/laravel-smart-migrations/issues",
        "source": "https://github.com/sirval/laravel-smart-migrations"
    },
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Sirval\\LaravelSmartMigrations\\": "src/",
            "Sirval\\LaravelSmartMigrations\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sirval\\LaravelSmartMigrations\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sirval\\LaravelSmartMigrations\\LaravelSmartMigrationsServiceProvider"
            ],
            "aliases": {
                "SmartMigrations": "Sirval\\LaravelSmartMigrations\\Facades\\SmartMigrations"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "readme": "README.md"
}
